<%= simple_form_for(@shot) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :location %>
    <%= f.association :cause, :include_blank => false %>
    <%= f.input :speak %>
    <%= f.input :needed_by %>
   
    <%= f.input :user_id, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

